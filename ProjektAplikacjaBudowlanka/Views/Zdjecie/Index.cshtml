@using ProjektAplikacjaBudowlanka.Models.DTO.Zdjecie
@model List<ZdjecieSelectDTO>

<h2>Zdjęcia poglądowe</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (Model.Count == 0)
{
    <p>Brak zdjęć</p>
}
else
{
<table class="table">
    <thead>
        <tr>
                <th>Zdjęcie</th>
                <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var zdjecie in Model)
        {
            <tr>
                    <td>
                        <a href=~/lib/Zdjecia/@zdjecie.NazwaPliku download>
                            <img src=~/lib/Zdjecia/@zdjecie.NazwaPliku alt="Zdjęcie" width="250" height="250" />
                        </a>
                    </td>
                    <td>
                        <a asp-action="DeleteZdjecie" asp-route-id="@zdjecie.idUslugodawca" class="btn btn-danger">Usuń</a>
                    </td>
            </tr>
        }
    </tbody>
    
</table>
}
<a class="btn btn-primary">Dodaj zdjęcie</a>
